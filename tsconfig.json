{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/app": ["./app/*"],
      "@/components": ["./components/*"],
      "@/assets": ["./assets/*"],
      "@/constants": ["./constants/*"],
      "@/api": ["./api/*"],
      "@/*": ["./*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
